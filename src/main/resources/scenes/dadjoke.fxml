<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.salmonllama.dadjoke.DadJokeController" spacing="25" alignment="CENTER">
  <padding><Insets top="25" bottom="25" right="25" left="25"/></padding>
  <Label fx:id="jokeLbl" alignment="CENTER" contentDisplay="CENTER"
         nodeOrientation="LEFT_TO_RIGHT" style="-fx-font-weight: bold" text="Insert dadjoke here" textAlignment="CENTER"
         wrapText="true">
    <font>
      <Font size="18.0"/>
    </font>
  </Label>
  <Button fx:id="newJokeBtn" alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" mnemonicParsing="false"
          text="New Joke"/>
</VBox>
